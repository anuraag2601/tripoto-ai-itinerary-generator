# API Configuration - Backend Proxy (Recommended for Production)
VITE_BACKEND_URL=http://localhost:3001
VITE_USE_BACKEND_PROXY=true

# Direct Anthropic API calls (Fallback - CORS limited)
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Environment
VITE_ENVIRONMENT=development

# External API Keys (Optional)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_ANALYTICS_ID=your_analytics_id_here

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MAP_INTEGRATION=false
VITE_ENABLE_PDF_DOWNLOAD=true
VITE_ENABLE_SHARING=true

# App Configuration
VITE_APP_NAME=Tripoto AI Itinerary Generator
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered travel itinerary generator

# Debugging
VITE_DEBUG=true
VITE_LOG_LEVEL=info

# Embedding Configuration
VITE_ALLOW_EMBEDDING=true
VITE_EMBED_DOMAINS=localhost,*.tripoto.com

# Performance
VITE_API_TIMEOUT=30000
VITE_CACHE_DURATION=300000

# Instructions:
# 1. Copy this file to .env
# 2. Replace your_anthropic_api_key_here with your actual Anthropic API key
# 3. Adjust other settings as needed  